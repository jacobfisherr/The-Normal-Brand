{%- if collection.handle == 'pants' -%}
  {{ 'section-pants-style-filter.css' | asset_url | stylesheet_tag }}
  {{ 'component-slider.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'pants-style-filter.js' | asset_url }}" defer="defer"></script>

  {%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}

  {%- liquid
    assign columns_mobile_int = section.settings.columns_mobile | plus: 0
    assign show_mobile_slider = false
    if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
      assign show_mobile_slider = true
    endif

    assign show_desktop_slider = false
    if section.settings.columns_desktop < section.blocks.size
      assign show_desktop_slider = true
    endif
  -%}

  <div class="pants-style-filter color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width section-{{ section.id }}-padding isolate">
      <pants-style-filter>
        <slider-component class="slider-mobile-gutter">
          <ul
            class="pants-style-filter-list grid grid--{{ section.settings.columns_mobile }}-col-tablet-down{% if show_mobile_slider %} slider slider--tablet grid--peek{% endif %}{% if show_desktop_slider %} slider--desktop grid--peek{% endif %}"
            id="Slider-{{ section.id }}"
            role="list"
          >
            {%- for block in section.blocks -%}
              <li
                id="Slide-{{ section.id }}-{{ forloop.index }}"
                class="pants-style-filter-card slider__slide grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                <div class="pants-style-card">
                  {%- if block.settings.image != blank -%}
                    <div class="pants-style-card__image-wrapper">
                      <div class="media media--portrait">
                        {{
                          block.settings.image
                          | image_url: width: 500
                          | image_tag:
                            loading: 'lazy',
                            class: 'pants-style-card__image',
                            widths: '165, 360, 535, 750, 1000',
                            sizes: '(min-width: 990px) 220px, (min-width: 750px) calc((100vw - 11.5rem) / 2), calc(100vw - 4rem)'
                        }}
                      </div>
                    </div>
                  {%- endif -%}

                  <div class="pants-style-card__content">
                    {%- if block.settings.title != blank -%}
                      <h3 class="pants-style-card__title">{{ block.settings.title }}</h3>
                    {%- endif -%}

                    {%- if block.settings.features != blank -%}
                      <ul class="pants-style-card__features">
                        {%- assign features = block.settings.features | newline_to_br | split: '<br />' -%}
                        {%- for feature in features -%}
                          {%- assign trimmed_feature = feature | strip -%}
                          {%- if trimmed_feature != blank -%}
                            <li>{{ trimmed_feature }}</li>
                          {%- endif -%}
                        {%- endfor -%}
                      </ul>
                    {%- endif -%}

                    {%- if block.settings.button_label != blank -%}
                      <button
                        type="button"
                        data-filter="{{ block.settings.button_link }}"
                        class="pants-style-card__button {{ block.settings.title | handleize }}-quicklink-btn"
                      >
                        {{ block.settings.button_label }}
                      </button>
                    {%- endif -%}
                  </div>
                </div>
              </li>
            {%- endfor -%}
          </ul>

          {%- if show_mobile_slider or show_desktop_slider -%}
            <div class="slider-buttons">
              <button
                type="button"
                class="slider-button slider-button--prev"
                name="previous"
                aria-label="{{ 'general.slider.previous_slide' | t }}"
              >
                {% render 'icon-caret' %}
              </button>
              <button
                type="button"
                class="slider-button slider-button--next"
                name="next"
                aria-label="{{ 'general.slider.next_slide' | t }}"
              >
                {% render 'icon-caret' %}
              </button>
            </div>
          {%- endif -%}

          {%- if show_mobile_slider or show_desktop_slider -%}
            <div class="pants-style-scrollbar">
              <div class="pants-style-scrollbar__track">
                <div class="pants-style-scrollbar__thumb"></div>
              </div>
            </div>
          {%- endif -%}
        </slider-component>
      </pants-style-filter>
    </div>
  </div>
{%- endif -%}

